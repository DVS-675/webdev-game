{
   "root": true,
   "env": {
      "browser": true,
      "es6": true,
      "node": true
   },
   "parser": "@typescript-eslint/parser",
   "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
   ],
   "plugins": ["prettier", "@typescript-eslint"],
   "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2020
   },
   "rules": {
      "prettier/prettier": "error",
      "camelcase": ["error"],
      "strict": "error",
      "eqeqeq": ["error", "always"]
   }
}
